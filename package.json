{
  "name": "chess",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/index.js",
  "scripts": {
    "dev": "vite",
    "build": "rimraf dist && vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "unplugin-auto-import": "^0.15.1",
    "vue": "^3.2.45",
    "vue-router": "^4.1.3",
    "sass": "^1.54.3",
    "sass-loader": "^13.0.2"
  },
  "devDependencies": {
    "@types/node": "^18.15.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "electron": "^23.1.3",
    "electron-devtools-installer": "^3.2.0",
    "rimraf": "^4.4.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-electron": "^0.11.1",
    "vue-tsc": "^1.0.24",
    "less": "^4.1.3",
    "less-loader": "^11.0.0"
  },
  "build": {
    "appId": "com.smallpig.desktop",
    "productName": "Chess",
    "asar": true,
    "copyright": "Copyright © 2022 Chess",
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist/**/*",
      "dist-electron/index.js"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080"
      }
    ],
    "releaseInfo": {
      "releaseNotes": "版本更新的具体内容"
    }
  }
}
